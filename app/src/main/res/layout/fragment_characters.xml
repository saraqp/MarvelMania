<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/contentCharacters"
    tools:context=".fragments.CharactersFragment"
    android:background="@color/fragmentBackgroundDark">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_margin="7dp"
       android:orientation="vertical">

         <EditText
             android:id="@+id/ETBuscadorChar"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:autofillHints=""
             android:ems="10"
             android:hint="@string/charact_name"
             android:inputType="textPersonName"
             android:minHeight="48dp"
             android:textColorHint="#212121" />


      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/recyclerViewCharacters"
          android:layout_width="match_parent"
          android:layout_height="match_parent" />

   </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>